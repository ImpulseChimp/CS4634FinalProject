 <div id="truck-description-container">
  <div id="truck-info-container" style="text-align: center;">

    <div id="photo-container">
      <img src="<%= @truck_img_src %>"/>
      <div id="rateYo"></div>
      <div id="reviewedBy" style="text-align: center; font-size: 25px;">
	<span>Reviewed by <%= @review_count %> people</span>
      </div>
    </div>

    <div id="description-container" style="font-size: 25px;">
      <span><label><b>Company:</b></label> <%= @company_name %></span>
      <span><label><b>License Plate:</b></label> <%= @license_plate %></span>
      <span><label><b>RR Code:</b></label> <%= @truck_code %></span>
    </div>
  </div>
  <div id="action-container" style="padding-bottom: 20px;">
    <a href="/review?truck_id=<%= @truck_id %>">
      <% if !controller.get_active_user.nil? %>
        <button id="review-button" class="rr-submit-button">Review Me!</button>
      <% else %>
          <a href="/signup"><button  id="review-button" class="rr-submit-button">Create an account to leave a review</button></a>
      <% end %>
    </a>
  </div>
  </div>


  <script>
      $(function () {
          $("#rateYo").rateYo({
              rating: <%= @star_rating %>,
              starWidth: "55px",
              readOnly: true
          });
      });
  </script>
