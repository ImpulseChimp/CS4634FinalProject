<div class="page-container">

  <div id="truck-description-container">

    <div id="photo-container">
      <img src="<%= @truck_img_src %>"/>
    </div>

    <div id="description-container">
      <div id="rateYo"></div>
      <span><label>Company:</label> <%= @company_name %></span>
      <span><label>License Plate:</label> <%= @license_plate %></span>
      <span><label>Rig Review Code:</label> <%= @truck_code %></span>
      <span>Reviewed by <%= @review_count %> people</span>
    </div>
  </div>

  <div id="action-container">
    <a href="/review?truck_id=<%= @truck_id %>">
      <button id="review-button">Write a review</button>
    </a>
  </div>

  <script>
      $(function () {
          $("#rateYo").rateYo({
              rating: <%= @star_rating %>,
              readOnly: true
          });
      });
  </script>
</div>