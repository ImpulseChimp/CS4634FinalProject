<div id="review-list-container" class="dataTable-container">
  <table id="review-list">
    <thead>
        <td>Date</td>
        <td>Reviewer</td>
        <td>e-mail</td>
        <td>truck license</td>
        <td>score</td>
        <td>type</td>
        <td>comment</td>
        <td>read</td>
        <td></td>
    </thead>
    <tbody>
        <% @company.reviews.all.each do |review| %>
            <tr>
              <% reviewer = User.where('user_id=?', review.user_id).first %>
              <td><%= review.created_at.strftime('%v') %></td>
              <td><%= reviewer.user_first_name + ' ' + reviewer.user_last_name %></td>
              <td><%= reviewer.email.email_address %></td>
              <td><%= Truck.where('truck_id=?', review.truck_id).first.truck_license_plate %></td>
              <td><%= review.review_score %></td>
              <td>
                <% if review.review_type == 0 %>
                    Positive
                <% elsif review.review_type == 1 %>
                    Negative
                <% else %>
                    Other
                <% end %>
              </td>
              <td>
                <% if review.review_text.size > 0 %>
                    Yes
                <% else %>
                    No
                <% end %>
              </td>
              <td id="<%= review.review_id %>_is_read">
                <% if review.company_is_read == 1 %>
                    Yes
                <% else %>
                    No
                <% end %>
              </td>
              <td><a class="popup-button" onclick="viewReviewPopup('<%= review.review_id %>');">view</a></td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>


