<!DOCTYPE html>
<html>
<head>
  <title>Rails-Foundation</title>
  <%= stylesheet_link_tag 'layouts/application.css' %>
  <%= stylesheet_link_tag controller_name + '/' + controller.action_name %>

  <%= stylesheet_link_tag 'layouts/user_top_nav' if controller.controller_name == 'user' %>
  <%= stylesheet_link_tag 'layouts/landing_top_nav' if controller.controller_name == 'landing' %>
  <%= stylesheet_link_tag 'layouts/admin_top_nav' if controller.controller_name == 'admin' && controller.action_name != 'login' %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

  <%= javascript_include_tag 'application.js' %>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
</head>
<body>
    <div id="page-container">

    <%= render :template => 'layouts/user_top_nav' if controller.controller_name == 'user' %>
    <%= render :template => 'layouts/landing_top_nav' if controller.controller_name == 'landing' %>
    <%= render :template => 'layouts/admin_top_nav' if controller.controller_name == 'admin' && controller.action_name != 'login' %>

    <%= yield %>

    </div>
</body>
<footer>
  <%= javascript_include_tag 'plugins/jquery.bpopup.min' %>
  <%= javascript_include_tag 'plugins/notify.min' %>
  <%= javascript_include_tag controller_name + '/' + controller.action_name %>
</footer>
</html>
