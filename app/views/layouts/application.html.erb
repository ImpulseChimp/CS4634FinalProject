<!DOCTYPE html>
<html>
    <head>
        <%
         home_url = controller.get_user_home_url
         action = controller.action_name
        %>
        <title>Rig Reviews</title>

        <%= stylesheet_link_tag 'layouts/application.css' %>
        <%= stylesheet_link_tag 'plugins/jquery.rateyo' %>
        <%= stylesheet_link_tag 'plugins/jquery.dataTables' %>

        <%= stylesheet_link_tag 'global/search' if home_url == 'comdash' || action == 'index' %>
        <%= stylesheet_link_tag 'layouts/commuter_top_nav' if home_url == 'comdash' %>
        <%= stylesheet_link_tag 'layouts/trucker_top_nav' if home_url == 'truckerdash'%>
        <%= stylesheet_link_tag 'layouts/landing_top_nav' if home_url == 'no_user' && controller_name != 'admin'%>
        <%= stylesheet_link_tag 'layouts/admin_top_nav' if controller_name == 'admin' && action != 'login' %>
        <%= stylesheet_link_tag controller_name + '/' + action %>

        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
        <%= javascript_include_tag 'application.js' %>
        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    </head>
    <body>
        <div id="page-container">

            <%= render :template => 'layouts/commuter_top_nav' if home_url == 'comdash' && action != 'dashboard' %>
            <%= render :template => 'layouts/commuter_dash_top_nav' if home_url == 'comdash' && action == 'dashboard' %>
            <%= render :template => 'layouts/company_side_nav' if home_url == 'compdash' %>
            <%= render :template => 'layouts/trucker_side_nav' if home_url == 'truckerdash' %>
            <%= render :template => 'layouts/landing_top_nav' if home_url == 'no_user' && controller_name != 'admin' %>

            <%= yield %>

        </div>
    </body>
    <footer>
        <%= javascript_include_tag 'global/search' if home_url == 'comdash' || action == 'index' %>
        <%= javascript_include_tag 'plugins/jquery.bpopup.min' %>
        <%= javascript_include_tag 'plugins/jquery.rateyo.min' %>
        <%= javascript_include_tag 'plugins/jquery.dataTables.min' %>
        <%= javascript_include_tag 'plugins/notify.min' %>
        <%= javascript_include_tag controller_name + '/' + action %>
    </footer>
</html>
